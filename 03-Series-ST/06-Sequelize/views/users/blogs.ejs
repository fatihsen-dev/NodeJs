<!DOCTYPE html>
<html lang="en">
   <%- include("../partials/head.ejs") %>
   <body>
      <%- include("../partials/nav.ejs") %>

      <div class="container mt-3">
         <div class="row">
            <div class="col-md-3">
               <%- include("../partials/category-menu.ejs",{categories,selectedCategory})
               %>
            </div>
            <div class="col-md-9">
               <h1 class="h3 mb-3"><%=title %></h1>
               <% if (blogs.length == 0) { %> <%- include("../partials/no-products") %> <%
               } %> <% blogs.forEach(blog => { %> <%-
               include("../partials/blog.card.ejs",blog.dataValues) %> <% }) %> <%
               if(blogs.filter(blog=>blog.onay).length > 3) { %>
               <%-include("../partials/pagination.ejs") %> <% } %>
            </div>
         </div>
      </div>
   </body>
</html>
