<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title %> - Blogapp</title>
    <link rel="stylesheet" href="./bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="./css/style.css" />
  </head>
  <body>
    <nav class="navbar navbar-dark bg-primary navbar-expand-lg">
      <div class="container">
        <a href="/" class="navbar-brand">Blogapp</a>
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a href="/blogs" class="nav-link">Blog listesi</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container mt-3">
      <div class="row">
        <div class="col-md-3">
          <div class="list-group">
            <% categories.forEach(category => { %>
            <a href="" class="list-group-item list-group-item-ation"><%= category %> </a>
            <% }) %>
          </div>
        </div>
        <div class="col-md-9">
          <h1 class="h3 mb-3"><%=title %></h1>
          <% blogs.forEach(blog => { %> <% if (blog.home && blog.onayli) { %>
          <div class="card mb-3">
            <div class="row">
              <div class="col-md-4">
                <img src="./images/<%= blog.imgSrc %>" class="img-fluid" alt="" />
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <div class="card-text"><%= blog.text %></div>
                </div>
              </div>
            </div>
          </div>
          <% } %> <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
